<h1 class="text-center mt-4">Create a new category</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class = "col-10" >
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 rounded custom-pink-bg px-4", local: true) do |f| %>

      <div class="form-group row">
        <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category name" %>
        </div>
      </div>


      <div class="form-group row justify-content-center">
        <div class="col-2">
          <%= f.submit class: "btn btn-light btn-lg" %>
        </div>
      </div>

    <% end %>
    </div>
    <div class="offset-10 mb-3">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
  </div>
</div>